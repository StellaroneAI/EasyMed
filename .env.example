# Server Configuration
PORT=3000
NODE_ENV=development

# AI4Bharat API Configuration
AI4BHARAT_BASE_URL=https://dhruva-api.bhashini.gov.in
AI4BHARAT_API_KEY=your_ai4bharat_api_key_here
AI4BHARAT_USER_ID=your_user_id_here

# Hugging Face API Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co

# Hugging Face Model Configuration
HF_MEDICAL_NER_MODEL=alvaroalon2/biobert_diseases_ner
HF_SYMPTOM_MODEL=microsoft/DialoGPT-medium
HF_MEDICAL_CHAT_MODEL=microsoft/BioGPT-Large
HF_MULTILINGUAL_MODEL=Helsinki-NLP/opus-mt-en-mul

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AI_RATE_LIMIT_WINDOW=300000
AI_RATE_LIMIT_MAX=20

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/mpeg,audio/m4a,audio/ogg