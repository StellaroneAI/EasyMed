{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "app/api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "VITE_MONGODB_URI": "@mongodb-uri",
    "VITE_OPENAI_API_KEY": "@openai-api-key"
  }
}